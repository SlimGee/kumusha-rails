<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Properties</h1>
  <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
</div>

<!-- Content Row -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Properties</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="table" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>Price</th>
                                <th>Availability</th>
                                <th>Status</th>
                                <th>
                                    <i class="fa fa-bolt text-danger"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @properties.each do |property| %>
                                <tr>
                                    <td><%= property.title %></td>
                                    <td><%= property.address %></td>
                                    <td><%= property.city %></td>
                                    <td><%= property.price %></td>
                                    <td><%= property.availability %></td>
                                    <td><%= property.status %></td>
                                    <td>
                                        <%= link_to edit_admin_property_path property do %>
                                            <i class="fa fa-edit"></i>
                                        <% end %>

                                        <%= link_to '<i class="fa fa-trash"></i>'.html_safe, admin_property_path(property), data: {:confirm => 'Are you sure?', :method => :delete} %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    document.addEventListener('turbolinks:load', () => {
        if ( ! $.fn.DataTable.isDataTable( '#table' ) ) {
            $('#table').DataTable({
                dom: 'Bfrtip',
                buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            })
        }
    })
</script>
