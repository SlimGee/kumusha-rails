<div class="spacer" id="contact">
    <div class="row">
        <div class="col-md-12">
            <div class="container">
                <div class="row m-0">
                    <div class="col-lg-7">
                        <div class="card-shadow" data-aos="flip-left" data-aos-duration="1200">
                            <img src="https://res.cloudinary.com/dwinzyahj/image/upload/v1593269442/johannes-plenio-UGMf30W28qc-unsplash_chtr3l.jpg" alt="Kumusha Properties" class="img-responsive">
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="contact-box m-l-30">
                            <h1 class="title font-light m-t-10">Contact Us</h1>
                            <%= form_with(url: contact_path, id: 'contactForm', method: 'post', local: false,  data: {:aos => 'fade-left', :'aos-duration' => '1200' }, class: 'm-t-30') do |form| %>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group m-t-10">
                                            <%= form.text_field :name, :class => 'form-control', :placeholder => 'Name', :required => true %>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group m-t-10">
                                            <%= form.email_field :email, class: 'form-control', placeholder: 'Email Adress', :required => true %>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group m-t-10">
                                            <%= form.text_field :phone, class: 'form-control', placeholder: 'Phone', :required => true %>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group m-t-10">
                                            <%= form.text_area :message, class: 'form-control', placeholder: 'Message', :required => true %>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <%= form.submit 'SUBMIT', class: 'btn btn-info-gradiant btn-md m-t-20 btn-arrow', data: {:'disable-with' => 'Please Wait...'} %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

