<div class="static-site-head" style="z-index:999999">
    <div class="row no-gutters property-header">
        <div class="w-100 image">
            <div class="swiper-container gallery-top">
                <div class="swiper-wrapper">
                    <% @property.property_images.each do |img| %>
                        <div class="swiper-slide" style="background-image:url( <%= img.image_url %> )"></div>
                    <% end %>
                </div>
                <!-- Add Arrows -->
                <div class="swiper-button-next swiper-button-white"></div>
                <div class="swiper-button-prev swiper-button-white"></div>
              </div>
              <div class="swiper-container gallery-thumbs">
                <div class="swiper-wrapper">
                    <% @property.property_images.each do |img| %>
                        <div class="swiper-slide" style="background-image:url( <%= img.image_url %> )"></div>
                    <% end %>
                </div>
              </div>
        </div>
        <div class="col-md-4 info-card" style="z-index:99999">
            <div class="card border-left-warning shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs text-muted  mb-1">Price</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">$ <%= @property.price %> </div>
                  </div>
                  <div class="col-auto">
                      <div class="text-xs text-muted mb-1">Availability</div>
                      <div class="h5 mb-0 font-weight-bold text-gray-800">Right Now</div>
                  </div>

                  <div class="col-auto">
                      <h1 class="title font-bold" style="font-family: 'El Messiri', sans-serif;">
                          <%= @property.title %>
                      </h1>
                      <h6 class="subtitle" style="font-family: 'El Messiri', sans-serif;">
                          <i class="fa fa-map-marker"></i> <%= @property.address %>, <%= @property.city %>
                      </h6>
                  </div>
                </div>
                <div class="row no-gutters align-items-center mt-5">
                  <div class="col-auto">
                      <button type="button" class="btn btn-success-gradiant">Schedule A Showing</button>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
